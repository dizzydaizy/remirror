{
  "name": "remirror-devtools",
  "version": "0.0.0",
  "private": true,
  "description": "A Devtools extension built using devtools-ds",
  "homepage": "https://github.com/remirror/remirror/tree/HEAD/apps/remirror-devtools-extension",
  "repository": "https://github.com/remirror/remirror/tree/HEAD/apps/remirror-devtools-extension",
  "license": "UNLICENCED",
  "author": "Ifiok Jr. ifiokotung@gmail.com",
  "scripts": {
    "build": "webpack --mode=production",
    "build:watch": "cross-env HMR=true NODE_ENV=development webpack --mode=development --watch",
    "lint": "eslint src",
    "package:chrome": "node .circleci/build-zip.js",
    "package:firefox": "npm run build && web-ext sign --source-dir ./dist/ -a ./dist_firefox --channel=unlisted",
    "watch:chrome": "npm run build:watch",
    "watch:firefox": "run-p build:watch watch:webext",
    "watch:webext": "web-ext run --source-dir ./dist/"
  },
  "dependencies": {
    "@devtools-ds/port-controller": "^1.0.3",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@linaria/core": "^3.0.0-beta.1",
    "@remirror/core-helpers": "1.0.0-next.60",
    "@remirror/react": "1.0.0-next.60",
    "@remirror/react-debugger": "0.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-split": "^2.0.9",
    "remirror": "1.0.0-next.60",
    "webextension-polyfill-ts": "^0.25.0"
  },
  "devDependencies": {
    "@design-systems/eslint-config": "^2.12.2",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.2.0",
    "mini-css-extract-plugin": "^1.3.6",
    "postcss-composes": "^0.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-mixins": "6.2.3",
    "postcss-nested": "^4.2.3",
    "postcss-simple-vars": "5.0.2",
    "style-loader": "^2.0.0",
    "web-ext": "^5.5.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.5.0",
    "webpack-extension-reloader": "^1.1.4"
  }
}
